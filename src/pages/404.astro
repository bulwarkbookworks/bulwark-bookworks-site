---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import MailerLiteTriggerLink from '~/components/widgets/MailerLiteTriggerLink.astro';

const title = `404`;

import { Image } from 'astro:assets';
import the404Image from "../assets/404.png";
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full sm:px-2.5 md:px-10 lg:px-12 xl:px-16 pt-2">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto">
      <div class="max-w-md text-center">
        <h2 class="mb-4 font-bold text-7xl">
          <span class="sr-only">404 Error Except It's A Secret Room Instead</span>
          <span class="">404</span>
        </h2>
        <Image src={the404Image} alt="Secret Room Image" />
        <p class="text-3xl font-semibold md:text-3xl">Youâ€™ve stumbled upon a secret room.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">A dusty tome rests on a pedestal, bound in unfamiliar leather.</p>
        <div>
          <MailerLiteTriggerLink formId="V7C5Fy" linkClasses="btn ml-4">
            Open The Mysterious Tome
          </MailerLiteTriggerLink>
          <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back To Safety</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
